<!-- Title -->
<title>
    <%= params.title %>
</title>

<!-- Header has imported from partials -->
<%- include('./Partials/header.ejs') %>


    <div class="container-fluid h-screen flex flex-col items-center w-full bg-black">
        <div class="text-center">
            <i data-visualcompletion="css-img" aria-label="Instagram" class="mt-36" role="img"
                style="background-image: url(&quot;https://static.cdninstagram.com/rsrc.php/v4/yB/r/E7m8ZCMOFDS.png&quot;); background-position: 0px 0px; background-size: auto; width: 175px; height: 51px; background-repeat: no-repeat; display: inline-block;"></i>
            <form action="./login" class="mt-5" method="post">
                <input class='text-sm text-white py-2 px-2 rounded-sm border-[1px] w-[250px] my-1' type="text"
                    name="username" placeholder="Username" required /><br />
                <input class='text-sm text-white py-2 px-2 rounded-sm border-[1px] w-[250px] my-2' type="password"
                    name="password" placeholder="Password" required /><br />

                <% if(params.error.length> 0){ %>
                    <p class="text-red-600">
                        <%= params.error %>
                    </p>
                    <% } %>
                        <button class="text-white bg-sky-700 py-1 px-25 cursor-pointer rounded-lg my-2">Log
                            in</button>
            </form>
            <p class="text-white text-sm my-2">Don't have an account? <a href="/" class="text-sky-600">Sign up</a>
            </p>
        </div>

        <!-- Footer has imported from partials -->
        <%- include('./Partials/footer.ejs') %>
    </div>